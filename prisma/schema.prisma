generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Product {
  sku String @id @default(uuid()) @db.Uuid
  title String?
  category Category[]
  inWarehouse ProductInWarehouse []
}
model Category {
  slug String @id @default(uuid()) @db.Uuid
  title String?
  product Product[]
}
model ProductInWarehouse {
  id String @id @default(uuid()) @db.Uuid
  product Product @relation(fields: [product_id], references: [sku])
  product_id String
  count Int
  warhouse Warehouse @relation(fields: [warhouse_id],references: [uuid])
  warhouse_id String

}
model Warehouse {
  uuid String @id @default(uuid()) @db.Uuid
  title String?
  product ProductInWarehouse[]
}
